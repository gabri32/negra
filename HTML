<script>
  function showHearts() {
    document.getElementById("container").style.display = "none";
    let heartsContainer = document.createElement("div");
    heartsContainer.className = "hearts";
    let hearts = document.createElement("div");
    hearts.innerHTML = "Te Amo";
    hearts.style.fontSize = "3em";
    hearts.style.position = "absolute";
    hearts.style.top = "50%";
    hearts.style.left = "50%";
    hearts.style.transform = "translate(-50%, -50%)";
    hearts.style.color = "#ff0000";
    heartsContainer.appendChild(hearts);
    document.body.appendChild(heartsContainer);
  }
</script>
